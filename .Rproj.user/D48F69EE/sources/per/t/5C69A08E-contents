pacman::p_load(flextable, officer, magrittr, tidyverse, lubridate)


#Realizamos las alineaciones del texto
alineacion_centro <- fp_par(text.align = "center")
alineacion_izquierda <- fp_par(text.align = "left")
alineacion_derecha <- fp_par(text.align = "right")
alineacion_justificada <- fp_par(text.align = "justify")


#Colocamos los posibles tipos de letra
texto_normal <- fp_text(font.size = 20,
                                bold = F,
                                color = "white",
                                font.family = "Montserrat" )

fuente_normal_negrita <- fp_text(font.size = 20,
                       bold = T,
                       color = "white",
                       font.family = "Montserrat" )

fuente_titulo_general <- fp_text(font.size = 70,
                                bold = T,
                                color = "#E7DAC1",
                                font.family = "Montserrat" )

fuente_titulo_diapositiva <- fp_text(font.size = 40,
                                bold = T,
                                color = "#6E152E",
                                font.family = "Montserrat" )

fuente_descripcion <- fp_text(font.size = 28,
                                    bold = F,
                                    color = "black",
                                    font.family = "Montserrat" )

fuente_fuente <- fp_text(font.size = 8,
                             bold = F,
                             color = "black",
                             font.family = "Montserrat" )



#Ajustamos las funciones
nueva_diapositiva <- function(.,diseño){
  add_slide(.,layout = diseño , master = "1_Tema de Office")

}

propiedades_diapositiva <- function(.,localizacion, enunciado, propiedades, alineacion){
  ph_with(
    .,
    fpar( value = ftext(enunciado, propiedades),
          fp_p = alineacion
    ),

    location = ph_location_label(ph_label = localizacion)

  )

}






